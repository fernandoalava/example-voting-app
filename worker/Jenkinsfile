 pipeline{

    agent any

    tools{
        maven 'Maven 3.6.3'
    }
    stages{
        stage('build'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Compiling worker app"
                dir('worker'){
                    sh 'mvn compile'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Running Unit Tests"
                dir('worker'){
                    sh 'mvn clean test'
                }
            }
        }
        stage('package'){
            when{
                branch 'master'
                changeset "**/worker/**"
            }
            steps{
                echo "Packaging worker app"
                dir('worker'){
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }
        stage('docke-package'){
            when{
                branch 'master'
                changeset "**/worker/**"
            }
            steps{
               script{
                    withDockerRegistry(credentialsId: 'docker-hub') {
                       def workerImage = docker.build("falavaz/worker:v${env.BUILD_ID}","./worker")
                       workerImage.push()
                       workerImage.push("${env.BRANCH_NAME}")
                    }
               }
            }
        }
    }
    post{
        always{
            echo "Pipeline for worker is complete..."
        }
    }
 }